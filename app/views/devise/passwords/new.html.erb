<div>
  <img class="h-12 w-auto" src="<%= image_url "logo_with_text.svg" %>" alt="Marine Cloud">
  <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
    Forgot your password?
  </h2>
</div>

<div class="mt-8">
  <div>
  <div class="mt-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <label for="user_email" class="block text-sm font-medium text-gray-700">
          Email address
        </label>
        <div class="mt-1">
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            required: true,
                            class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm'
          %>
        </div>
      </div>

      <div>
        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
          Send me reset password instructions
        </button>
      </div>
    <% end %>
  </div>
  </div>
</div>

