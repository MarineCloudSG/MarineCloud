<div class="relative block w-full rounded-lg p-6 text-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 bg-white mb-3 shadow">
  <div class="px-3 py-2">
    <h1 class="text-left text-xl text-black-500 font-bold">Download</h1>
  </div>

  <div class="flow-root px-3 py-5 ">
    <ul role="list" class="-mb-8">
      <% for download in collection %>
        <li>
          <a href="<%= rails_blob_path(download.attachment, disposition: "attachment") %>">
            <div class="relative pb-8">
              <div class="relative flex space-x-3">
                <div>
            <span class="h-8 w-8 rounded-full bg-blue-200 flex items-center justify-center ring-8 ring-white">
              <!-- Heroicon name: link -->
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"/>
</svg>

            </span>
                </div>
                <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                  <div>
                    <p class="text-sm font-medium text-blue-600"><%= download.title %></p>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>