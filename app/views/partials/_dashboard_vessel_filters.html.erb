<div class="relative block w-full border-2 border-gray-300 rounded-lg p-6 text-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
  <h3 class="text-lg leading-6 font-medium text-gray-900">Selected period</h3>
  <%= form_with method: :get do |f| %>
    <div>
      <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:pt-5">
        <%= f.date_field :start_date, {value: start_date, class: 'form-control', onchange: 'if(!this.value)return;this.form.submit()'}  %>
        <%= f.date_field :end_date, {value: end_date, class: 'form-control', onchange: 'if(!this.value)return;this.form.submit()'} %>

        <div>
          <button id="dropdownVesselGroupButton" data-dropdown-toggle="dropdownVesselGroup" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
            Vessel groups <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
          <!-- Dropdown menu -->
          <div id="dropdownVesselGroup" class="z-10 hidden bg-white divide-y divide-gray-100 rounded shadow w-44 dark:bg-gray-700 text-left">
            <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownVesselGroupButton">
              <% current_user.vessel_groups.each do |vessel_group| %>
                <li>
                  <%= check_box_tag('vessel_group_ids[]', vessel_group.id, vessel_group_ids.include?(vessel_group.id), {onchange: 'this.form.submit()'}) %>
                  <%= vessel_group.name %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
