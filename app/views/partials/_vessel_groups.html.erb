<div class="text-sm mb-6 font-medium text-center text-gray-500 border-b border-gray-200">
  <ul class="flex flex-wrap -mb-px">
    <li class="mr-2">
      <% if active_group_ids.nil? %>
        <a href="<%= url_for(request.parameters.merge({ :vessel_group_ids => nil })) %>" class="inline-block p-4 rounded-t-lg border-b-2 border-blue-600 active text-blue-600 " aria-current="page">All</a>
      <% else %>
        <a href="<%= url_for(request.parameters.merge({ :vessel_group_ids => nil })) %>" class="inline-block p-4 rounded-t-lg border-b-2 border-blue-600 border-b-transparent" aria-current="page">All</a>
      <% end %>
    </li>
    <% groups.each do |vessel_group| %>
      <li class="mr-2">
        <% if !active_group_ids.nil? && active_group_ids.include?(vessel_group.id) %>
          <a href="<%= url_for(request.parameters.merge({ :vessel_group_ids => [vessel_group.id] })) %>" class="inline-block p-4 rounded-t-lg border-b-2 border-blue-600 active text-blue-600"><%= vessel_group.name %></a>
        <% else %>
          <a href="<%= url_for(request.parameters.merge({ :vessel_group_ids => [vessel_group.id] })) %>" class="inline-block p-4 rounded-t-lg border-b-2 border-blue-600 border-b-transparent"><%= vessel_group.name %></a>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>