<div>
  <%= form_for [vessel, VesselComment.new] do |f| %>
    <%= f.hidden_field :assigned_date, { value: assigned_date } %>
    <%= f.hidden_field :current_query, { value: request.query_parameters.to_json } %>
    <div class="flex">
      <%= f.text_field :message,
                      class: "grow bg-blue-100 border-0 border-b border-transparent rounded-md
                            focus:ring-0 focus:border-sky-600 sm:text-sm",
                      placeholder: "Add your comment...",
                      rows: 3 %>
      <%= f.button "Send", type: :submit,
                   class: "px-4 py-2 border border-transparent rounded-md
                          shadow-sm text-white bg-blue-500 text-sm font-medium
                          focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500
                          hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
